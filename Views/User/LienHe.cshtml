@model GreenFood.Models.TINNHANLIENHE
@*@{
    ViewBag.Title = "LienHe";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}*@

<!doctype html>
<html lang="en">
<head>
     @*Required meta tags*@ 
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700,900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/Content/LienHe/fonts/icomoon/style.css">
     @*Bootstrap CSS*@ 
    <link rel="stylesheet" href="~/Content/LienHe/css/bootstrap.min.css">
    <!-- Style -->
    <link rel="stylesheet" href="~/Content/LienHe/css/style.css">
<title>Contact Form #6</title>
</head>
<body>


<div class="content">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">


                <div class="row justify-content-center">
                    <div class="col-md-6">

                        <h3 class="heading mb-4">Let's talk about everything!</h3>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptas debitis, fugit natus?</p>

                        <p><img src="~/Content/LienHe/images/undraw-contact.svg" alt="Image" class="img-fluid"></p>


                    </div>
                    <div class="col-md-6">
                        @using (Html.BeginForm("LienHe", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <form class="mb-5" method="post" id="contactForm" name="contactForm">
                                <div class="row">
                                    <div class="col-md-12 form-group">
                                        <input type="text" class="form-control" name="HoTen" id="name" placeholder="Your name">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 form-group">
                                        <input type="text" class="form-control" name="Email" id="email" placeholder="Email">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 form-group">
                                        <input type="text" class="form-control" name="TieuDe" id="subject" placeholder="Subject">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 form-group">
                                        <textarea class="form-control" name="NoiDung" id="message" cols="30" rows="7" placeholder="Write your message"></textarea>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <input type="submit" value="Send Message" class="btn btn-primary rounded-0 py-2 px-4">
                                        <span class="submitting"></span>
                                    </div>
                                </div>
                            </form>

                            <div id="form-message-warning mt-4"></div>
                            <div id="form-message-success">
                                Your message was sent, thank you!
                            </div>
                        }
                    </div>
                </div>
                <div style="padding-top: 20px;">
                    @Html.ActionLink("Trở lại", "Index","GreenFood")
                </div>
            </div>
        </div>
    </div>

</div>

<script src="~/Content/LienHe/js/jquery-3.3.1.min.js"></script>
<script src="~/Content/LienHe/js/popper.min.js"></script>
<script src="~/Content/LienHe/js/bootstrap.min.js"></script>
<script src="~/Content/LienHe/js/jquery.validate.min.js"></script>
<script src="~/Content/LienHe/js/main.js"></script>



</body>
</html>

