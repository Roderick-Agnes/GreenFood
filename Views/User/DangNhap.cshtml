<!DOCTYPE html>
<html lang="en">
<head>
    <title>Dang Nhap</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/DangNhap/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/DangNhap/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/DangNhap/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/DangNhap/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/DangNhap/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/DangNhap/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/DangNhap/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/DangNhap/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/DangNhap/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/DangNhap/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/DangNhap/css/main.css">
    <!--===============================================================================================-->
</head>

<body>
    <script>
        window.fbAsyncInit = function () {
            FB.init({
                appId: '245020967533848',
                xfbml: true,
                version: 'v11.0'
            });
            FB.AppEvents.logPageView();
        };

        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) { return; }
            js = d.createElement(s); js.id = id;
            js.src = "https://connect.facebook.net/en_US/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
    @using (Html.BeginForm("DangNhap", "User"))
    {
        @Html.ValidationSummary(true)
        if (Request.Cookies["UserName"] != null && Request.Cookies["Pw"] != null)
        {
            <div class="limiter">
                <div class="container-login100" style="background-image: url('../../Content/DangNhap/images/bg-01.jpg');">
                    <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
                        <form class="login100-form validate-form flex-sb flex-w">
                            <span class="login100-form-title p-b-53">
                                Sign In With
                            </span>
                            <div class="row">
                                <a href="/User/LoginFacebook" class="btn-face m-b-20 col-6" style="max-width:240px">
                                    <i class="fa fa-facebook-official"></i>
                                    Facebook
                                </a>
                                

                                <a href="#" class="btn-google m-b-20 col-6" style="max-width: 240px;margin-left:10px;">
                                    <img src="~/Content/DangNhap/images/icons/icon-google.png" alt="GOOGLE">
                                    Google
                                </a>
                            </div>
                            <h5 style="color:red; text-align:center;">@ViewBag.ThongBao</h5>
                            <div class="p-t-31 p-b-9">
                                <span class="txt1">
                                    Username
                                </span>
                            </div>
                            <div class="wrap-input100 validate-input" data-validate="Username is required">
                                <input class="input100" type="text" name="UserName" value="@Request.Cookies["UserName"].Value">
                                <span class="focus-input100"></span>
                            </div>

                            <div class="p-t-13 p-b-9">
                                <span class="txt1">
                                    Password
                                </span>

                                <a href="#" class="txt2 bo1 m-l-5">
                                    Forgot?
                                </a>
                            </div>
                            <div class="wrap-input100 validate-input" data-validate="Password is required">
                                <input class="input100" type="password" name="Pw" value="@Request.Cookies["Pw"].Value">
                                <span class="focus-input100"></span>
                            </div>
                            @Html.CheckBox("remember")<span style="font-style:italic;">Nhớ thông tin đăng nhập</span>
                            <div class="container-login100-form-btn m-t-17">
                                <button class="login100-form-btn" type="submit">
                                    Sign In
                                </button>
                            </div>

                            <div class="w-full text-center p-t-55">
                                <span class="txt2">
                                    Not a member?
                                </span>

                                <a href="@Url.Action("DangKy","User")" class="txt2 bo1">
                                    Sign up now
                                </a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="limiter">
                <div class="container-login100" style="background-image: url('../../Content/DangNhap/images/bg-01.jpg');">
                    <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
                        <form class="login100-form validate-form flex-sb flex-w">
                            <span class="login100-form-title p-b-53">
                                Sign In With
                            </span>
                            <div class="row">
                                <a href="/User/LoginFacebook" class="btn-face m-b-20 col-6" style="max-width:240px">
                                    <i class="fa fa-facebook-official"></i>
                                    Facebook
                                </a>

                                <a href="#" class="btn-google m-b-20 col-6" style="max-width: 240px;margin-left:10px;">
                                    <img src="~/Content/DangNhap/images/icons/icon-google.png" alt="GOOGLE">
                                    Google
                                </a>
                            </div>
                            <h5 style="color:red; text-align:center;">@ViewBag.ThongBao</h5>
                            <div class="p-t-31 p-b-9">
                                <span class="txt1">
                                    Username
                                </span>
                            </div>
                            <div class="wrap-input100 validate-input" data-validate="Username is required">
                                <input class="input100" type="text" name="UserName">
                                <span class="focus-input100"></span>
                            </div>
                            <h6 style="color:red;">@ViewData["Err1"]</h6>
                            <div class="p-t-13 p-b-9">
                                <span class="txt1">
                                    Password
                                </span>

                                <a href="#" class="txt2 bo1 m-l-5">
                                    Forgot?
                                </a>
                            </div>
                            <div class="wrap-input100 validate-input" data-validate="Password is required">
                                <input class="input100" type="password" name="Pw">
                                <span class="focus-input100"></span>
                            </div>
                            <h6 style="color:red;">@ViewData["Err2"]</h6>
                            @Html.CheckBox("remember")<span style="font-style:italic;">Nhớ thông tin đăng nhập</span>
                            <div class="container-login100-form-btn m-t-17">
                                <button class="login100-form-btn" type="submit">
                                    Sign In
                                </button>
                            </div>

                            <div class="w-full text-center p-t-55">
                                <span class="txt2">
                                    Not a member?
                                </span>

                                <a href="@Url.Action("DangKy","User")" class="txt2 bo1">
                                    Sign up now
                                </a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        }
    }



    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/Content/DangNhap/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/DangNhap/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/DangNhap/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/DangNhap/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/DangNhap/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/DangNhap/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Content/DangNhap/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/DangNhap/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/DangNhap/js/main.js"></script>

</body>
</html>
