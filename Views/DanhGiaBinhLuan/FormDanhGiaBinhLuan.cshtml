<link rel="stylesheet" href="~/Content/reviewform.css">
<div class="col-sm-6 space_left">
    @using (Html.BeginForm("FormDanhGiaBinhLuan", "DanhGiaBinhLuan", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "review-form" }))
    {
        <h3>BÌNH LUẬN</h3>
        <h5>Họ và tên *</h5>
        <input class="form-control" type="text" name="HoTen">
        <h5>Email *</h5>
        <input class="form-control" type="email" name="Email">
        <div id="review-form" style="margin-bottom:-20px">
            <div class="input-rating">
                <div class="row" style="padding-top:10px">
                    <h5 class="col-3">Đánh giá:</h5>
                    <h4 class="stars">
                        <input id="star5"
                               name="Rating"
                               value="5"
                               type="radio" /><label for="star5"></label>
                        <input id="star4"
                               name="Rating"
                               value="4"
                               type="radio" /><label for="star4"></label>
                        <input id="star3"
                               name="Rating"
                               value="3"
                               type="radio" /><label for="star3"></label>
                        <input id="star2"
                               name="Rating"
                               value="2"
                               type="radio" /><label for="star2"></label>
                        <input id="star1"
                               name="Rating"
                               value="1"
                               type="radio" /><label for="star1"></label>
                        <input type="hidden" name="MaThucPham" value="@ViewBag.MaThucPham" />
                        @*<input type="hidden" name="GiaSale" value="@GiaSale" />*@
                    </h4>
                </div>
            </div>
        </div>

        <h5>Nội dung:</h5>
        <textarea class="form-control form_1" name="NoiDung"></textarea>
        <button class="btn btn-danger" style="margin-top:10px;border-radius:0px">Đăng bình luận</button>
    }
</div>

