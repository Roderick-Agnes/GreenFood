@model GreenFood.Models.QUANLYDONHANG

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding-top: 50px;">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>CHỈNH SỬA THÔNG TIN ĐƠN HÀNG</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label class="control-label col-md-2">Tên khách hàng:</label>
                <div class="col-md-10">
                    @Html.DropDownList("MaTV")
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Ngày giao:</label>
                <div class="col-md-10">
                    <input type="date" class="form-control" name="NgayGiao" value="@Convert.ToDateTime(@ViewBag.NgayGiao)" required />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">GhiChu:</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" name="GhiChu" value="@ViewBag.GhiChu" required />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Tên thực phẩm:</label>
                <div class="col-md-10">
                    @*@Html.DropDownList("MaThucPham")*@
                    <input type="text" class="form-control" value="@ViewBag.TenThucPham" readonly />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Trọng lượng:</label>
                <div class="col-md-10">
                    <input type="number" class="form-control" name="TrongLuong" value="@ViewBag.TrongLuong" required />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="margin-top: 20px;">
                    <input type="submit" value="Save" class="btn btn-outline-success" />
                </div>
            </div>
        </div>
    }

    <div style="padding-top: 20px;">
        @Html.ActionLink("Trở lại", "QuanLyDonHang", "QuanLyDonHang")
    </div>
</div>



