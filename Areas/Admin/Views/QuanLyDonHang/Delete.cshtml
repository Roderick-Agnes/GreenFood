@model GreenFood.Models.QUANLYDONHANG

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="container" style="padding-top: 50px;">
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>THÔNG TIN ĐƠN HÀNG</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Tên khách hàng:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.THANHVIEN.HoTenTV)
            </dd>

            <dt>
                Ngày đặt:
            </dt>

            <dd>
                @Html.FormatValue(Model.NgayDat, "{0:dd/MM/yyyy}")
            </dd>

            <dt>
                Ngày giao:
            </dt>

            <dd>
                @Html.FormatValue(Model.NgayGiao, "{0:dd/MM/yyyy}")
            </dd>

            <dt>
                Ghi chú:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.GhiChu)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-outline-success" /> |
                @Html.ActionLink("Trở lại", "QuanLyDonHang")
            </div>
        }
    </div>
</div>