@model GreenFood.Models.LOAITHUCPHAM

@{
    ViewBag.Title = "XoaLoaiThucPham";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <h2>XÓA LOẠI THỰC PHẨM NÀY</h2>

    <h3>Are you sure you want to delete this?</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên loại thực phẩm:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenLoaiThucPham)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-outline-success" /> |
            @Html.ActionLink("Trở lại", "QuanLyThucPham","QuanLyChung", new { htmlAttributes = new { @class = "btn btn-outline-success" } })
        </div>
    }
</div>