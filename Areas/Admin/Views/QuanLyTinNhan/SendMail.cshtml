@model GreenFood.Models.TINNHANLIENHE

@{
    ViewBag.Title = "SendMail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding:50px;">
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>REPLY TIN NHẮN CỦA KHÁCH HÀNG</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Tên khách hàng:
            <div class="col-md-10 form-control">
                @ViewBag.TenKH
            </div>
        </div>

        <div class="form-group">
            Tiêu đề:
            <div class="col-md-10 form-control">
                @ViewBag.TieuDe
            </div>
        </div>

        <div class="form-group">
            Nội dung từ khách hàng:
            <div class="col-md-10 form-control">
                @ViewBag.NoiDung
            </div>
        </div>

        <div class="form-group">
            Trả lời:
            <div class="col-md-10">
                <input class="form-control" name="TraLoi"/>
            </div>
        </div>

        <div class="form-group" style="margin-top:10px;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Gửi" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "QuanLyTinNhan")
</div>
</div>
