@model GreenFood.Models.THANHVIEN

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding-top: 50px;">

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>THÔNG TIN KHÁCH HÀNG</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Họ và tên:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.HoTenTV)
            </dd>

            <dt>
                Giới tính:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.GioiTinh)
            </dd>

            <dt>
                Địa chỉ:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DiaChi)
            </dd>

            <dt>
                Điện thoại:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DienThoai)
            </dd>

            <dt>
                Email:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                Ngày đăng ký:
            </dt>

            <dd>
                @Html.FormatValue(Model.NgayDK, "{0:dd/MM/yyyy}")
            </dd>

            <dt>
                Tài khoản:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>

            <dt>
                Mật khẩu:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Pw)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-outline-success" /> |
                @Html.ActionLink("Trở về", "QuanLyKhachHang", "QuanLyKhachHang")
            </div>
        }
    </div>
</div>
