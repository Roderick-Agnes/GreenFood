<body>
    <script>
        window.fbAsyncInit = function () {
            FB.init({
                appId: '245020967533848',
                xfbml: true,
                version: 'v11.0'
            });
            FB.AppEvents.logPageView();
        };

        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) { return; }
            js = d.createElement(s); js.id = id;
            js.src = "https://connect.facebook.net/en_US/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
    @using (Html.BeginForm("DoiMatKhau", "InAndOut"))
    {
        @Html.ValidationSummary(true)
            <div class="limiter">
                <div class="container-login100" style="background-image: url('../../Areas/Admin/Content/DangNhap/images/bg-01.jpg');">
                    <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
                        <form class="login100-form validate-form flex-sb flex-w">
                            <span class="login100-form-title p-b-53">
                                ĐỔI MẬT KHẨU
                            </span>

                            @*<h5 style="color:red; text-align:center;">@ViewBag.ThongBao</h5>*@
                            <div class="p-t-31 p-b-9">
                                <span class="txt1">
                                    Nhập mật khẩu cũ:
                                </span>
                            </div>
                            <div class="wrap-input100 validate-input" data-validate="Password is required">
                                <input class="input100" type="password" name="Pw">
                                <span class="focus-input100"></span>
                            </div>
                            <a style="color:red;">@ViewBag.ThongBao1</a>
                            <div class="p-t-13 p-b-9">
                                <span class="txt1">
                                    Nhập mật khẩu mới:
                                </span>

                            </div>
                            <div class="wrap-input100 validate-input" data-validate="Password is required">
                                <input class="input100" type="password" name="Pwm">
                                <span class="focus-input100"></span>
                            </div>

                            <div class="p-t-13 p-b-9">
                                <span class="txt1">
                                    Xác nhận mật khẩu:
                                </span>

                            </div>
                            <div class="wrap-input100 validate-input" data-validate="Password is required">
                                <input class="input100" type="password" name="xnpw">
                                <span class="focus-input100"></span>
                            </div>
                            <a style="color:red;">@ViewBag.ThongBao2</a>
                            <div class="container-login100-form-btn m-t-17">
                                <button class="login100-form-btn" type="submit">
                                    Xác nhận
                                </button>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
    }


    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/Areas/Admin/Content/DangNhap/vendor/jquery/jquery-3.2.1.min.js"></script>
