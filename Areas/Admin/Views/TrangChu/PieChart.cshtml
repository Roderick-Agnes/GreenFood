@using GreenFood.Models

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    var t = intParse.(@ViewBag.Tong);
    var tt = @ViewBag.Thittuoi;
    var tc = @ViewBag.Traicay;
    var rc = @ViewBag.Raucu;
    var hst = @ViewBag.Haisantuoi;
    var datv = @ViewBag.DauanTV;
    var sptt = @ViewBag.SanPhamTuTrung;
      google.charts.load("current", {packages:["corechart"]});
      google.charts.setOnLoadCallback(drawChart);

        function drawChart() {

        var data = google.visualization.arrayToDataTable([
          ['Task', 'Hours per Day'],
          ['Thịt tươi', tt],
          ['Trái cây', tc],
          ['Rau củ', rc],
          ['Hải sản tươi', hst],
          ['Dầu ăn thực vật', datv],
          ['Các loại sản phẩm từ trứng', sptt]
        ]);

        var options = {
          title: 'My Daily Activities',
          is3D: true,
        };

        var chart = new google.visualization.PieChart(document.getElementById('piechart_3d'));
        chart.draw(data, options);

        }
</script>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-chart-area me-1"></i>
        Pie Chart
    </div>
    <div class="container-fluid" id="piechart_3d" style=" height: 340px;"></div>
</div>