@model GreenFood.Models.CHITIETKHUYENMAI

@{
    ViewBag.Title = "DeleteSanPhamKhuyenMai";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container" style="padding-top: 50px;">
    <h2>DeleteSanPhamKhuyenMai</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>CHI TIẾT KHUYẾN MÃI</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Mã thực phẩm:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MaThucPham)
            </dd>

            <dt>
                Giảm giá:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.GiamGia)%
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-outline-success" /> |
                @Html.ActionLink("Trở lại", "QuanLyKhuyenMai")
            </div>
        }
    </div>
</div>