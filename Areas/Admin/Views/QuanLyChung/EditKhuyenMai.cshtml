@model GreenFood.Models.CHUONGTRINHKHUYENMAI

@{
    ViewBag.Title = "EditKhuyenMai";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container">
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>CHỈNH SỬA THÔNG TIN KHUYẾN MÃI</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaKM)

        <div class="form-group">
            <label class="control-label col-md-2">Tên chương trình khuyến mãi:</label>
            <div class="col-md-10">
                <input type="text" class="form-control" size="70" name="sTenKM" value="@ViewBag.TenKM"/>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Thời gian bắt đầu:</label>
            <div class="col-md-10">
                <input type="date" class="form-control" name="dThoiGianBD" required value="@ViewBag.ThoiGianBD" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Thời gian kết thúc:</label>
            <div class="col-md-10">
                <input type="date" class="form-control" name="dThoiGianKT" required value="@ViewBag.ThoiGianKT" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="margin-top:10px;">
                <input type="submit" value="Save" class="btn btn-outline-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "QuanLyKhuyenMai")
</div>
</div>