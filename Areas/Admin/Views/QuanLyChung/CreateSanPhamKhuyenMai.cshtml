@model GreenFood.Models.CHITIETKHUYENMAI
@{
    ViewBag.Title = "CreateSanPhamKhuyenMai";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding-top: 50px;">

    @using (Html.BeginForm("CreateSanPhamKhuyenMai", "QuanLyChung", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>CHI TIẾT KHUYẾN MÃI</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label class="control-label col-md-2">Tên thực phẩm:</label>
                <div class="col-md-10">
                    @Html.DropDownList("MaThucPham")
                </div>
            </div>
            @*<div class="form-group">
                <label class="control-label col-md-2">Mã thực phẩm:</label>
                <div class="col-md-10">
                    @Html.DropDownList("Check")
                </div>
            </div>*@
            <div class="form-group">
                <label class="control-label col-md-2"> Sale:</label>
                <div class="col-md-10">
                    <input class="form-control" type="number" min="1" max="1" value="1" readonly name="CheckSales" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Giảm giá:</label>
                <div class="col-md-10">
                    <input class="form-control" type="number" min="0" required name="iGiamGia" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="padding-top: 20px;">
                    <input type="submit" value="Create" class="btn btn-outline-success" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Trở lại", "QuanLyKhuyenMai")
    </div>
</div>