        <div class="mb-4">
            <a href="@Url.Action("Create","NhapKho")" class=" btn btn-warning" role="button" style="color:white"><i class="fas fa-edit"></i> Thêm thực phẩm</a>
            <a href="@Url.Action("CreateLoaiThucPham","NhapKho")" class=" btn btn-warning" role="button" style="color:white"><i class="fas fa-edit"></i> Thêm loại thực phẩm</a>
        </div>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Bảng danh sách thực phẩm
            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
