@using GreenFood.Models

@{
    ViewBag.Title = "QuanLyThucPham";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">THỰC PHẨM</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Phân loại thực phẩm</li>
        </ol>
        <div class="row">
            @{
                var i = 0;
                var tmp = "";
            }
            @foreach (var item in Model)
            {
                i++;
                if (i == 1)
                {
                    tmp = "bg-primary";
                    <div class="col-xl-3 col-md-6">
                        <div class="card @tmp text-white mb-4">
                            <div class="card-body">@item.TenLoaiThucPham</div>
                            <div class="card-footer d-flex align-items-center justify-content-between">
                                <a class="small text-white stretched-link" href="@Url.Action("PhanLoaiThucPham", new { id = @item.MaLoaiThucPham})">Xem chi tiết</a>
                                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                            </div>
                        </div>
                    </div>
                }
                else if (i == 2)
                {
                    tmp = "bg-warning";
                    <div class="col-xl-3 col-md-6">
                        <div class="card @tmp text-white mb-4">
                            <div class="card-body">@item.TenLoaiThucPham</div>
                            <div class="card-footer d-flex align-items-center justify-content-between">
                                <a class="small text-white stretched-link" href="@Url.Action("PhanLoaiThucPham", new { id = @item.MaLoaiThucPham})">Xem chi tiết</a>
                                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                            </div>
                        </div>
                    </div>
                }
                else if (i == 3)
                {
                    tmp = "bg-success";
                    <div class="col-xl-3 col-md-6">
                        <div class="card @tmp text-white mb-4">
                            <div class="card-body">@item.TenLoaiThucPham</div>
                            <div class="card-footer d-flex align-items-center justify-content-between">
                                <a class="small text-white stretched-link" href="@Url.Action("PhanLoaiThucPham", new { id = @item.MaLoaiThucPham})">Xem chi tiết</a>
                                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                            </div>
                        </div>
                    </div>
                }
                else if (i == 4)
                {
                    tmp = "bg-danger";
                    <div class="col-xl-3 col-md-6">
                        <div class="card @tmp text-white mb-4">
                            <div class="card-body">@item.TenLoaiThucPham</div>
                            <div class="card-footer d-flex align-items-center justify-content-between">
                                <a class="small text-white stretched-link" href="@Url.Action("PhanLoaiThucPham", new { id = @item.MaLoaiThucPham})">Xem chi tiết</a>
                                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                            </div>
                        </div>
                    </div>
                    i = 0;
                }

            }


        </div>
